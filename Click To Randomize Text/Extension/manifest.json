{
  "manifest_version": 3,
  "name": "Local - Alt Click Text Randomizer",
  "version": "2.0",
  "description": "Click the icon to toggle text randomization on the current page.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Text Randomizer",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}